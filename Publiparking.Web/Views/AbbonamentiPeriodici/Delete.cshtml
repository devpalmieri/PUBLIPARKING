@model Publiparking.Core.Data.SqlServer.Entities.AbbonamentiPeriodici
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-xs-12 col-md-12">
        <div class="header-form-blue">
            <h2>Cancella Abbonamento periodico</h2>

        </div>
    </div>
    <br /><br /><br />
    <h3 class="alert-danger" style="width: 50%; padding-bottom: 8px; padding-top: 8px;">Sei sicuro di volere cancellare l'abbonamento?</h3>
    <br />

    <div>
        <h3>Abbonamento</h3>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                ID:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.idAbbonamentoPeriodico)
            </dd>
            <dt class="col-sm-2">
                Codice:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.codice)
            </dd>
            <dt class="col-sm-2">
                Targa:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.targa)
            </dd>
            <dt class="col-sm-2">
                Cognome:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.cognome)
            </dd>
            <dt class="col-sm-2">
               Nome:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.nome)
            </dd>
            
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="idAbbonamentoPeriodico" />
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-action="Index">Annulla</a>
        </form>
    </div>
</div>
<div>
    <a asp-action="Index">Ritorna all'elenco</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

