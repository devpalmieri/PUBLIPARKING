@model Publiparking.Web.Models.Account.LoginViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Area Riservata";
}
<br />
<br />
<br />
<br />
<div class="row">
    <div class="col-md-12">
        <section id="loginForm">
            <div class="box box-default">
                <div class="box-header with-border">
                    <h1 class="box-title" style="font-size:26px">Autenticazione</h1>
                    <br /><br /><br />
                    <h2 class="box-title">Inserire le credenziali per accedere.</h2>
                    @*<div class="box-tools pull-right">
                            <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                            <button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-remove"></i></button>
                        </div>*@
                </div>
                <div class="box-body">
                    <div class="row">
                        @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, false, new { @class = "form-horizontal", role = "form" }))
                        {
                            @Html.AntiForgeryToken()
                            @*<h4>Usare un account locale per accedere.</h4>
                                <hr />*@
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="form-group">
                                @Html.LabelFor(m => m.UserName, new { @class = "col-md-2 control-label" })
                                <div class="col-md-10">
                                    @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", style = "width:36%" })
                                    @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
                                <div class="col-md-10">
                                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", style = "width:36%" })
                                    @*@Html.TextBoxFor(m => m.Password, new { @class = "form-control", style = "width:36%" })*@
                                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(m => m.UserName, new { @class = "col-md-2 control-label" })
                                <div class="col-md-10">
                                    @Html.TextBoxFor(m => m.codFiscalePIVA, new { @class = "form-control", style = "width:36%" })
                                    @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Accedi" class="btn btn-default" />
                                </div>
                            </div>
                            <p style="padding-left: 15px;">
                                @Html.ActionLink("Esegui registrazione come nuovo utente", "Register")
                            </p>
                            @* Abilitare questa opzione dopo aver abilitato la conferma dell'account per la funzionalità di reimpostazione della password
                                <p>
                                    @Html.ActionLink("Password dimenticata?", "ForgotPassword")
                                </p>*@
                        }
                    </div>
                </div>
                <br /><br /><br /><br /><br /><br /><br /><br /><br /><br /><br /><br />
            </div>
        </section>
    </div>

</div>
<div style="height:100%"></div>

